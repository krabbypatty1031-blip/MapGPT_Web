{
  "expo": {
    "name": "MapGPT - HKBU智能助手",
    "slug": "mapgpt-hkbu",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "mapgpt",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E90FF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hkbu.mapgpt",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "此应用需要访问您的位置以在地图上显示您的当前位置。",
        "NSMicrophoneUsageDescription": "此应用需要访问麦克风以进行语音输入。",
        "NSPhotoLibraryUsageDescription": "此应用需要访问您的相册以选择图片。",
        "NSCameraUsageDescription": "此应用需要访问相机以拍摄照片。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E90FF"
      },
      "package": "com.hkbu.mapgpt",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "允许应用访问您的麦克风以进行语音输入。"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
